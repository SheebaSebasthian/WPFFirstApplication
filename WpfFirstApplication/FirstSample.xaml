<Page x:Class="WpfFirstApplication.FirstSample"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfFirstApplication"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome to WPF Application" >
    <Border Margin="10,0,10,10">
        <Grid>
            <StackPanel Orientation="Horizontal">
                <Label Height="68" FontSize="30px" FontFamily="calibri" FontStyle="Oblique" Content="This is my first WPF Application" Margin="0,2,0,370"/>
            </StackPanel>
            <Grid.Background>
                <ImageBrush ImageSource="Images/watermark.png" />
            </Grid.Background>
        </Grid>
    </Border>
</Page>
